@page
@model CrudRazor.Pages.Categories.IndexModel


<div class="container">

    <div class="row pt-4 pb-2">
        <div class="col-6 text-lg">
            <h4 class="text-primary">
                Category List
            </h4>
        </div>
        <div class="col-6 text-end  ">
            <a asp-page="category/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Add category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <td>
                    Category Name
                </td>
                <td>
                    Display Order
                </td>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group " role="group">
                            <a asp-page="category/edit"  class="btn btn-primary mx-2" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group align-items-center">
                            <a asp-page="category/delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>  Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>

    </table>
</div>